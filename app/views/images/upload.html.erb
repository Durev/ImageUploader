<div class="row" id="background-title">
  <h1 class="text-center">Home</h1>
  <h5 class="text-center">Upload any picture from your computer</h5>
</div><!-- /row -->

<div class="row upload">
  <div class="col-md-6 main-home">
    <%= form_for(@image) do |f| %>

      <%= render 'shared/error_messages' %>

      <div class="form-group">
        <%= f.label "Picture" %>
        <%= f.file_field :name, accept: 'image/jpeg,image/png', class: "" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, placeholder:  "You can provide a short description for your picture", class: "form-control" %>
        <small id="passwordHelpBlock" class="form-text text-muted">
          Your description should not be more than 300 characters long.
        </small>
      </div>
        <%= f.submit "Upload", class: "btn btn-success" %>

    <% end %>
  </div>
</div><!-- /row -->

<script type="text/javascript">
  $('#image_name').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 2) {
      alert('Maximum file size is 2MB. Please choose a smaller file.');
    }
  });
</script>
