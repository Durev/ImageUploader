<h1>Home</h1>

<%= form_for(@image) do |f| %>

  <%= render 'shared/error_messages' %>

  <div>
    <%= f.text_field :description, placeholder:  "Test img creation" %>
  </div>
  <div>
    <%= f.file_field :name, accept: 'image/jpeg,image/png' %>
  </div>

  <%= f.submit "Upload" %>
<% end %>

<script type="text/javascript">
  $('#image_name').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 2) {
      alert('Maximum file size is 2MB. Please choose a smaller file.');
    }
  });
</script>
